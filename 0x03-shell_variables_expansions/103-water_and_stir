#!/bin/bash

# Convert WATER and STIR to base 10
water_10=$(( 10#${WATER} ))
stir_10=$(( 10#${STIR} ))

# Add the two numbers together
result_10=$(( water_10 + stir_10 ))

# Convert the result to base "bestchol"
result_bestchol=$(echo "obase=bestchol; ${result_10}" | bc)

# Print the result
echo "The sum of WATER (${WATER}) and STIR (${STIR}) is ${result_bestchol} in base bestchol."
